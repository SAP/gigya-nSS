{
  "platformAware": false,
  "markup": {
    "initialRoute": "register",
    "screens": {
      "login": {
        "id": "login",
        "flow": "login",
        "appBar": {
          "textKey": "login"
        },
        "stack": "vertical",
        "children": [
          {
            "type": "label",
            "textKey": "login with site credentials:"
          },
          {
            "id": "loginID",
            "type": "email",
            "textKey": "Email"
          },
          {
            "id": "password",
            "type": "password",
            "textKey": "Password"
          },
          {
            "type": "submit",
            "textKey": "Submit",
            "api": "accounts.login"
          }
        ],
        "routing": {
          "routes": {
            "success": {
              "route": "dismiss"
            }
          }
        }
      },
      "register": {
        "id": "register",
        "flow": "registration",
        "appBar": {
          "textKey": "Register"
        },
        "stack": "vertical",
        "children": [
          {
            "type": "label",
            "textKey": "Register with site credentials:"
          },
          {
            "id": "email",
            "type": "email",
            "textKey": "Email"
          },
          {
            "id": "password",
            "type": "password",
            "textKey": "Password"
          },
          {
            "type": "submit",
            "textKey": "Submit",
            "api": "accounts.register"
          }
        ],
        "routing": {
          "routes": {
            "success": {
              "route": "dismiss"
            }
          }
        }
      }
    }
  }
}